{% extends 'base.html.twig' %}

{% block title %}{{ poem.title }}{% endblock %}

{% block body %}
    <div class="container">
            <h1>{{ poem.title }}</h1>

        <hr>

        {{ poem.content|raw }}

        <h2 class="comment-title mt-5">
            <span class="comment-count">{{ poem.comments|length }}</span> comment(s)
        </h2>

        <hr>

        <div class="comment-area mb-5">
            {{ form(commentForm, { 'attr': { 'class': 'comment-form' } }) }}
        </div>

        <div class="comment-list">
            {% for comment in poem.comments%}
                {% include 'comment/index.html.twig' with [comment] %}
            {% endfor %}
        </div>

        <a class="nav-link px-lg-3 py-3 py-lg-4" href="{{ path('app_home') }}">Back</a>

    </div>
{% endblock %}
