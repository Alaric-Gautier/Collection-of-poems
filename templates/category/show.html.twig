{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
    <main class="container">
        <div class="row g-5">

            <div class="col">
                <h3 class="mb-5 fst-italic border-bottom">{{ category.name }}</h3>
                <div id="poem-list" class="px-5">
                    {% include 'poem/list.html.twig' with { poems: category.poems, leftCol: 4, rightCol: 8 }%}
                </div>
            </div>

        </div>
    </main>

{% endblock %}
